{
  "manifest_version": 3,
  "name": "Scott's Utility Color Kit",
  "description": "Converts color values between RGB, HSV, and Hex",
  "version": "0.9.3",
  "permissions": ["storage","activeTab"],
  "action": {
    "default_popup": "index.html",
    "default_icon": "images/color-picker-logo-small.png"
  },
  "background": {
    "service_worker": "js/background.js"
  },
  "side_panel": {
    "default_path": "index.html"
  },
  "web_accessible_resources": [{
    "resources": [ "images/*.png", "images/*.jpeg", "files.html" ],
    "matches": [ "https://localhost/*" ]
  }]
}